<ContentControl
     Width="400"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bootlegger.App.Win"
      xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Bootlegger.App.Win.WiFiCheck"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Grid VerticalAlignment="Bottom">
            <Button x:Name="continuebtn" Margin="0,0,21,10" Style="{DynamicResource SquareButtonStyle}" Content="Continue"  HorizontalAlignment="Right" Padding="8" VerticalAlignment="Bottom" BorderThickness="0.5" Custom:ControlsHelper.ContentCharacterCasing="Upper" Click="Continuebtn_Click_1"/>
        </Grid>
        <StackPanel Margin="20" Orientation="Vertical">
            <Label Padding="0" Content="Connectivity" Height="60" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFA4A4A4" FontFamily="Segoe UI Light" Width="360" FontSize="18" Height="78"><Run Text="Your current WiFi settings are not correct."/><LineBreak/><Run Text="Make sure you are connected to your deployment WiFi before continuing."/></TextBlock>
            <StackPanel Orientation="Horizontal"/>

            <StackPanel Orientation="Horizontal"/>

            <StackPanel Orientation="Horizontal"/>

            <StackPanel Orientation="Horizontal"/>

        </StackPanel>

    </Grid>
</ContentControl>
