<ContentControl
     Width="400"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bootlegger.App.Win"
      xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Bootlegger.App.Win.Intro"
      mc:Ignorable="d" 
    xmlns:p="clr-namespace:Bootlegger.App.Win.locale"
      d:DesignHeight="400" d:DesignWidth="800">

    <Grid>
        <Grid VerticalAlignment="Bottom">
            <Button x:Name="continuebtn" Margin="10" Style="{DynamicResource SquareButtonStyle}" Content="{x:Static p:Strings.Continue}"  HorizontalAlignment="Right" Padding="8" VerticalAlignment="Bottom" BorderThickness="0.5" Custom:ControlsHelper.ContentCharacterCasing="Upper"/>
        </Grid>
        <StackPanel Margin="20" Orientation="Vertical">
            <Label Padding="0" Content="{x:Static p:Strings.Welcome}" Height="60" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#333" FontFamily="Segoe UI Light" Height="84" Width="360" FontSize="18" Text="{x:Static p:Strings.AdditionalSoftware}"/>
            <!--<Image Margin="0,40,0,0" Source="logo_white.png" HorizontalAlignment="Center" Height="60"/>-->

        </StackPanel>
        <Path Data="M0,274.08548 L300.05709,274.08548" Height="0.5" Stretch="Fill" Stroke="Black" VerticalAlignment="Bottom" Opacity="0.5" Margin="0,0,0,52"/>
    </Grid>
</ContentControl>
